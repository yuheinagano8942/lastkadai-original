<% if current_user.like?(@recipes) %>
 <%= form_for(current_user.likes.find_by(recipe_id: recipe_id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :recipe_id, recipe.id %>
    <%= f.submit 'お気に入りを解除する', class: 'btn btn-warning btn-xs' %>
   <% end %>
  <% else %>
   <%= form_for(current_user.likes.build) do |f| %>
     <%= hidden_field_tag :recipe_id, recipe.id %>
     <%= f.submit 'お気に入りを追加する', class: 'btn btn-success btn-xs' %>
    <% end %>
  <% end %>